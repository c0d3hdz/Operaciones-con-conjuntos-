    <style>
    .bubble-container {
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        overflow: hidden;
        z-index: -1;
    }

    .bubble {
        position: absolute;
        bottom: -100px;
        width: 20px;
        height: 20px;
        background-color: rgba(65, 139, 80, 0.6);
        border-radius: 50%;
        animation: rise 10s infinite;
    }

    @keyframes rise {
        0% {
        transform: translateY(100vh) scale(0);
        opacity: 0;
        }
        50% {
        opacity: 1;
        }
        100% {
        transform: translateY(-100vh) scale(1.2);
        opacity: 0;
        }
    }
    </style>

    <div class="bubble-container">
    {Array.from({ length: 20 }).map((_, index) => (
        <div class="bubble" style={`left: ${Math.random() * 100}%; animation-duration: ${Math.random() * 5 + 5}s;`}></div>
    ))}
    </div>
