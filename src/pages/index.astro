---
import Layout from '../layouts/Layout.astro';
import SetOperations from '../components/Operaciones';
import Header from '../components/Head.astro'
import Background from '../components/Background.astro'
---

<Layout title="Operaciones con conjuntos.">
	<main>
		<Background/>
		<Header/>
		<SetOperations client:visible/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	@media (max-width: 1250px) {
		main{
			padding-top: 50px;
			margin-top: calc(100%/ 4);
		}
    }

</style>
